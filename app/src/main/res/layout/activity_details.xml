<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".Details"
    android:background="@color/Surface">

    <TextView
        android:id="@+id/paletteDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/paletteDetailImageView"
        android:layout_width="match_parent"
        android:layout_height="353dp"
        android:paddingEnd="20dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/colorOneTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onClickCopy"
        android:textAlignment="center"
        android:textColor="#FFBBBB"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/colorTwoTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:onClick="onClickCopy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/colorThreeTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:onClick="onClickCopy"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/colorFourTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onClickCopy"
        android:textAlignment="center"
        android:textColor="#FFBBBB"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
